<% layout('layouts/boilerplate') %>

<div class="project">
    <h1 class="mb-3">US Camping &amp; Hiking</h1>
    <div class="row">
        <div class="col-md-6 main">
            <section>
                <img class="image-main" src="/images/uscampingandhiking.png" alt="">
                <div class="links-container py-2">
                    <div class="project-links">
                        <a class="live-demo" href="https://still-plains-89842.herokuapp.com/" target="_blank">
                            Live Demo
                        </a>
                    </div>
                    <div class=" project-links">
                        <a class="source-code" href="https://github.com/roseminted/USCampingAndHiking"
                            target="_blank">Source Code
                        </a>
                    </div>
                </div>
                <div class="load-delay">
                    <p>
                        This app is hosted on a Heroku Free Dyno Plan, meaning that on the initial load, the server may
                        take 15-20 seconds or so to start up. Thank you.
                    </p>
                </div>
            </section>
            <section>
                <h6>Technologies Used</h6>
                <ul class="techsused">
                    <li>MongoDB</li>
                    <li>ExpressJS</li>
                    <li>NodeJS</li>
                    <li>Bootstrap 5</li>
                    <li>HTML5</li>
                    <li>CSS3</li>
                    <li>Mapbox</li>
                    <li>JavaScript</li>
                    <li>Passport</li>
                    <li>Cloudinary</li>
                    <li>Flash</li>
                    <li>Helmet</li>
                </ul>
            </section>
        </div>
        <div class="col-md-6 description-features">
            <section class="features">
                <h6>Notable Features</h6>
                <ul class="notable-features">
                    <li>Registration</li>
                    <li>Login</li>
                    <li>Image Upload</li>
                    <li>Interactive Maps and Geocoding</li>
                    <li>Cloudnary and Mapbox API Integration</li>
                    <li>Client &amp; Server Form Validations</li>
                    <li>Create, Update, &amp; Delete Campground &amp; Hiking Posts</li>
                    <li>Create, Update, &amp; Delete reviews for each Campground &amp; Hiking destination</li>
                    <li>Flash Messages</li>
                    <li>Responsive Design</li>
                </ul>
            </section>
            <section class="description">
                <h6>Description</h6>
                <p>
                    US Camping & Hiking is a yelp-like application where users can view campgrounds and hiking locations
                    and the reviews associated with each location.
                </p>
                <p>
                    After registering and logging in, a user can then create and update their own locations as well as
                    review all posts.
                </p>
            </section>
        </div>
    </div>
    <div class="row text-center">
        <section class="gifs-container">
            <img class="gifs" src="/images/addReview.gif" alt="Add A Review">
            <img class="gifs" src="/images/ClusterMap.gif" alt="Cluster Map">
            <img class="gifs" src="/images/deleteCampground.gif" alt="Delete Campground">
            <img class="gifs" src="/images/integrateMapboxAPI.gif" alt="Integrated Mapbox">
            <img class="gifs" src="/images/userLoginAndFormValidations.gif" alt="Login and Form Validation">
            <!-- The Modal -->
            <div id="myModal" class="modal">
                <!-- The Close Button -->
                <span class="close">&times;</span>
                <!-- Modal Content (The Image) -->
                <img class="modal-content" id="img01">
                <!-- Modal Caption (Image Text) -->
                <div id="caption"></div>
            </div>
        </section>
    </div>
</div>